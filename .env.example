# ===================================
# Database Configuration
# ===================================
DATABASE_URL="postgresql://user:password@localhost:5432/pixelflow?schema=public"

# ===================================
# Redis Configuration (Upstash)
# ===================================
REDIS_URL="redis://default:password@localhost:6379"

# ===================================
# Whop Platform Configuration
# Get these from: https://dev.whop.com/apps
# ===================================
NEXT_PUBLIC_WHOP_APP_ID="app_xxxxxxxxxxxxxxxxxxxx"
WHOP_API_KEY="whop_xxxxxxxxxxxxxxxxxxxx"
WHOP_WEBHOOK_SECRET="whsec_xxxxxxxxxxxxxxxxxxxx"

# ===================================
# App Configuration
# ===================================
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NODE_ENV="development"

# Encryption key for access tokens (generate with: openssl rand -base64 32)
ENCRYPTION_KEY=""

